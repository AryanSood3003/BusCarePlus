<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutusActivity">


    <Button
        android:id="@+id/college_link"
        android:layout_width="130dp"
        android:layout_height="69dp"
        android:layout_marginStart="536dp"
        android:layout_marginTop="232dp"
        android:backgroundTint="@color/menu_blue"
        android:text="@string/humber_college"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/heading_aboutus"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ques_1"
        android:layout_width="134dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:text="@string/ques_1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ans_1"
        android:layout_width="420dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        android:text="@string/ans_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ques_2"
        android:layout_width="216dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:text="@string/ques_2"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ans_2"
        android:layout_width="454dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="252dp"
        android:text="@string/ans_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="104dp"
        android:text="@string/our_college"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>